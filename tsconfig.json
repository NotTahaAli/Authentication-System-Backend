{
    "compilerOptions": {
        "target": "es6",
        "module": "CommonJS",
        "outDir": "dist",
        "rootDirs": [
            "src",
            "types"
        ],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
    },
    "include": [
        "types",
        "src",
        "drizzle.config.ts"
    ]
}